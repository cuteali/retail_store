<div class="main sidebar-minified">     
  <div class="page-header">
    <div class="pull-left">
      <ol class="breadcrumb visible-sm visible-md visible-lg">                
        <li><a href="<%= root_path %>"><i class="icon fa fa-home"></i>首页</a></li>
        <li class="active"><a href="<%= users_path %>"><i class="fa fa-table"></i>系统管理</a></li>
      </ol>           
    </div>
    <div class="pull-right">
      <h2>系统管理</h2>
    </div>          
  </div>
  <div class="row">   
    <div class="col-lg-12">
      <div class="panel">
        <div class="panel-heading bk-bg-primary">
          <h6><i class="fa fa-table red"></i><span class="break"></span>系统管理</h6>
        </div>
        <div class="panel-body">
          <%= render '/layouts/alert' %>
          <div class="table-responsive">  
            <div style="float: right;">
              <a href="<%= new_user_registration_path %>" class="bk-margin-5 btn btn-success"><i class="fa fa-plus"></i> 添加管理员</a>
            </div>
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
              <thead>
                <tr>
                  <th>id</th>
                  <th>店铺</th>
                  <th>用户名</th>
                  <th>电话</th>
                  <th>邮箱</th>
                  <th>角色</th>
                  <th>操作</th>
                </tr>
              </thead>   
              <tbody>
                <% if @users.each do |user| %>
                  <tr>
                    <td><%= user.id %></td>
                    <td><%= user.shop.try(:name) %></td>
                    <td><%= user.username %></td>
                    <td><%= user.phone %></td>
                    <td><%= user.email %></td>
                    <%= render user %>
                    <td>
                      <%= link_to edit_user_path(user), class: "btn btn-info", title: "修改", data: { rel: "tooltip" } do %>
                        <i class="fa fa-edit"></i>
                      <% end %>
                      <%= link_to forget_password_user_path(user), class: "btn btn-success", title: "重置密码", data: { rel: "tooltip" } do %>
                        <i class="fa fa-eraser"></i>
                      <% end %>
                      <% unless user == current_user %>
                        <%= link_to user_path(user), class: "btn btn-danger", method: :delete, title: "删除", data: { rel: "tooltip", confirm: '确定要删除吗？' } do %>
                          <i class="fa fa-trash-o"></i>
                        <% end %>
                      <% end %>
                    </td>
                  </tr>
                <% end.blank? %>
                  <tr>
                    <td colspan="7" class="green text-center">无记录</td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <%= paginate @users %>
        </div>
      </div>
    </div>          
  </div>
</div>

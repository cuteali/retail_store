<div class="main sidebar-minified">     
  <div class="page-header">
    <div class="pull-left">
      <ol class="breadcrumb visible-sm visible-md visible-lg">                
        <li><a href="<%= root_path %>"><i class="icon fa fa-home"></i>首页</a></li>
        <li class="active"><a href="<%= adverts_path %>"><i class="fa fa-table"></i>广告管理</a></li>
      </ol>           
    </div>
    <div class="pull-right">
      <h2>广告管理</h2>
    </div>          
  </div>
  <div class="row">   
    <div class="col-lg-12">
      <div class="panel">
        <div class="panel-heading bk-bg-primary">
          <h6><i class="fa fa-table red"></i><span class="break"></span>广告管理</h6>
        </div>
        <div class="panel-body">
          <%= render '/layouts/alert' %>
          <div class="table-responsive">
            <div style="float: right;">
              <a href="<%= new_advert_path %>" class="bk-margin-5 btn btn-success"><i class="fa fa-plus"></i> 添加广告</a>
            </div>
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
              <thead>
                <tr>
                  <th>id</th>
                  <th>关联的产品</th>
                  <th>广告图片</th>
                  <th>操作</th>
                </tr>
              </thead>   
              <tbody>
                <% if @adverts.each do |advert| %>
                  <tr>
                    <td><%= advert.id %></td>
                    <td><%= advert.shop_product.name %></td>
                    <td><%= image_tag advert.key.try(:url), size:"80x50" %></td>
                    <td>
                      <%= link_to edit_advert_path(advert), class: "btn btn-info", title: "修改", data: { rel: "tooltip" } do %>
                        <i class="fa fa-edit"></i>
                      <% end %>
                      <%= link_to advert_path(advert), class: "btn btn-danger", method: :delete, title: "删除", data: { rel: "tooltip", confirm: '确定要删除吗？' } do %>
                        <i class="fa fa-trash-o"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end.blank? %>
                  <tr>
                    <td colspan="4" class="green text-center">无记录</td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <%= paginate @adverts %>
        </div>
      </div>
    </div>          
  </div>
</div>

<div class="main sidebar-minified">     
  <div class="page-header">
    <div class="pull-left">
      <ol class="breadcrumb visible-sm visible-md visible-lg">                
        <li><a href="<%= root_path %>"><i class="icon fa fa-home"></i>首页</a></li>
        <li class="active"><a href="<%= messages_path %>"><i class="fa fa-table"></i>推送管理</a></li>
      </ol>           
    </div>
    <div class="pull-right">
      <h2>推送管理</h2>
    </div>          
  </div>
  <div class="row">   
    <div class="col-lg-12">
      <div class="panel">
        <div class="panel-heading bk-bg-primary">
          <h6><i class="fa fa-table red"></i><span class="break"></span>推送管理</h6>
        </div>
        <div class="panel-body">
          <%= render '/layouts/alert' %>
          <div class="table-responsive">  
            <div style="float: right;">
              <a href="<%= new_message_path %>" class="bk-margin-5 btn btn-success"><i class="fa fa-plus"></i> 添加推送消息</a>
            </div>
            <table class="table table-bordered table-striped table-condensed table-hover">
              <thead>
                <tr>
                  <th>id</th>
                  <th>推送目标</th>
                  <th>推送的产品</th>
                  <th>标题</th>
                  <th>内容</th>
                  <th>操作</th>
                </tr>
              </thead>   
              <tbody>
                <% if @messages.each do |message| %>
                  <tr>
                    <td><%= message.id %></td>
                    <td><%= message.goal_name %></td>
                    <td><%= message.messageable.try(:name) %></td>
                    <td><%= message.title %></td>
                    <td><%= message.info %></td>
                    <td>
                      <%= link_to edit_message_path(message), class: "btn btn-info", title: "修改", data: { rel: "tooltip" } do %>
                        <i class="fa fa-edit"></i>
                      <% end %>
                      <%= link_to message_path(message), class: "btn btn-danger", method: :delete, title: "删除", data: { rel: "tooltip", confirm: '确定要删除吗？' } do %>
                        <i class="fa fa-trash-o"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end.blank? %>
                  <tr>
                    <td colspan="6" class="green text-center">无记录</td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <%= paginate @messages %>
        </div>
      </div>
    </div>          
  </div>
</div>

<div class="main sidebar-minified">     
  <div class="page-header">
    <div class="pull-left">
      <ol class="breadcrumb visible-sm visible-md visible-lg">                
        <li><a href="<%= root_path %>"><i class="icon fa fa-home"></i>首页</a></li>
        <li class="active"><a href="<%= shoppers_path %>"><i class="fa fa-table"></i>用户管理</a></li>
        <li class="active"><a href="<%= shopper_path(@shopper) %>"><i class="fa fa-list"></i><%= @shopper.id %>用户的地址列表</a></li>
      </ol>           
    </div>
    <div class="pull-right">
      <h2>地址列表</h2>
    </div>          
  </div>
  <div class="row">   
    <div class="col-lg-12">
      <div class="panel">
        <div class="panel-heading bk-bg-primary">
          <h6><i class="fa fa-table red"></i><span class="break"></span>地址列表</h6>
        </div>
        <div class="panel-body">
          <%= render '/layouts/alert' %>
          <div class="table-responsive">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
              <thead>
                <tr>
                  <th>id</th>
                  <th>收货人</th>
                  <th>电话</th>
                  <th>区域</th>
                  <th>详细地址</th>
                  <th>纬度</th>
                  <th>经度</th>
                  <th>是否为默认地址</th>
                  <th>操作</th>
                </tr>
              </thead>   
              <tbody>
                <% if @addresses.each do |address| %>
                  <tr>
                    <td><%= address.id %></td>
                    <td><%= address.receive_name %></td>
                    <td><%= address.receive_phone %></td>
                    <td><%= address.area %></td>
                    <td><%= address.detail %></td>
                    <td><%= address.lat %></td>
                    <td><%= address.lng %></td>
                    <td><%= address.is_default ? '是' : '否' %></td>
                    <td>
                      <%= link_to edit_address_path(address, shopper_id: @shopper.id), class: "btn btn-info", title: "修改", data: { rel: "tooltip" } do %>
                        <i class="fa fa-edit"></i>
                      <% end %>
                      <%= link_to address_path(address, shopper_id: @shopper.id), class: "btn btn-danger", method: :delete, title: "删除", data: { rel: "tooltip", confirm: '确定要删除吗？' } do %>
                        <i class="fa fa-trash-o"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end.blank? %>
                  <tr>
                    <td colspan="9" class="green text-center">无记录</td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>          
  </div>
</div>

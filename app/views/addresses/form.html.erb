<div class="main">
  <div class="page-header">
    <div class="pull-left">
      <ol class="breadcrumb visible-sm visible-md visible-lg">                
        <li><a href="<%= root_path %>"><i class="icon fa fa-home"></i>首页</a></li>
        <li><a href="<%= shoppers_path %>"><i class="fa fa-table"></i>用户管理</a></li>
        <li><a href="<%= shopper_path(@shopper) %>"><i class="fa fa-list"></i><%= @shopper.id %>用户的地址列表</a></li>
        <li class="active"><a href="<%= edit_address_path(@address, shopper_id: @shopper.id) %>"><i class="fa fa-pencil-square-o"></i><%= crumb_name(@address) %>收货地址</a></li>
      </ol>           
    </div>
    <div class="pull-right">
      <h2><%= crumb_name(@address) %>收货地址</h2>
    </div>          
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="panel">
        <div class="panel-heading bk-bg-primary">
          <h6><i class="fa fa-indent red"></i>填写表单</h6>              
        </div>
        <div class="panel-body">
          <%= form_for(@address, url: address_path(@address, shopper_id: @shopper.id), html: {class: "form-horizontal", role: "form", multipart: true}) do |f| %>
            <div class="form-group">
              <label class="col-md-3 control-label" for="receive_name">收货人</label>
              <div class="col-md-9">
                <%= f.text_field :receive_name, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label" for="receive_phone">电话</label>
              <div class="col-md-9">
                <%= f.text_field :receive_phone, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label" for="area">区域</label>
              <div class="col-md-9">
                <%= f.text_field :area, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label" for="detail">详细地址</label>
              <div class="col-md-9">
                <%= f.text_field :detail, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label" for="lat">纬度</label>
              <div class="col-md-9">
                <%= f.text_field :lat, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label" for="lng">经度</label>
              <div class="col-md-9">
                <%= f.text_field :lng, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-3 control-label">是否为默认地址</label>
              <div class="col-md-9">
                <div class="radio-custom radio-inline">
                  <%= f.radio_button :is_default, true, id: 'is_default1' %>
                  <label for="is_default1"> 是</label>
                </div>
                <div class="radio-custom radio-inline">
                  <%= f.radio_button :is_default, false, id: 'is_default2' %>
                  <label for="is_default2"> 否</label>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-3 col-md-offset-3">
                <button type="submit" class="bk-margin-5 btn btn-primary">保存</button>
                <%= link_to (session[:return_to] || "javascript:history.go(-1);"), class: "bk-margin-5 btn btn-default" %>
              </div>
            </div>
            <br>
          <% end %>
        </div>  
      </div>  
    </div>
  </div>
</div>

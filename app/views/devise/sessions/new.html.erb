<div class="row">
  <div class="body-login">
    <div class="center-login">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <button type="button" class="close" data-dismiss="alert">×</button>
          <%= value %>
        </div>
      <% end %>
      <a href="#" class="logo pull-left hidden-xs">
        <img src="/assets/logo.png" height="45" alt="NADHIF Admin" />
      </a>
      <div class="panel panel-login">
        <div class="panel-title-login text-right">
          <h2 class="title"><i class="fa fa-user"></i> 登录</h2>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <label>账号</label>
              <div class="input-group input-group-icon">
                <%= f.text_field :login, autofocus: true, class: 'form-control bk-noradius', placeholder: '用户名/手机号/邮箱' %>
                <span class="input-group-addon">
                  <span class="icon">
                    <i class="fa fa-user"></i>
                  </span>
                </span>
              </div>
            </div>

            <div class="form-group">
              <label>密码</label>                 
              <div class="input-group input-group-icon">
                <%= f.password_field :password, autocomplete: "off", class: 'form-control bk-noradius', placeholder: '密码' %>
                <span class="input-group-addon">
                  <span class="icon">
                    <i class="fa fa-lock"></i>
                  </span>
                </span>
              </div>
            </div>
            <br />
            <div class="row">
              <div class="col-sm-8">
                <% if devise_mapping.rememberable? -%>
                  <div class="checkbox-custom checkbox-default bk-margin-bottom-10">
                    <%= f.check_box :remember_me %>
                    <%= f.label '记住我' %>
                  </div>
                <% end -%>
              </div>
              <div class="col-sm-4 text-right">
                <button href="index.html" type="submit" class="btn btn-primary hidden-xs">登录</button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
